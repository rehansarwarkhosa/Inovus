# Application Stage
NODE_ENV=development
APP_STAGE=dev

# Server Configuration
PORT=3000
HOST=localhost

# MongoDB Database
DATABASE_URL=mongodb://localhost:27017/inovus
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT Configuration (minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-please-change-this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-min-32-chars-please-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# Bcrypt
BCRYPT_ROUNDS=12

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=debug
